        select
        <include refid="Base_Column_List"/>
        from <include refid="Base_select_table"/>
        <where>
              and  a.user_id = #{userId,jdbcType=INTEGER}
              and  a.role_id = #{roleId,jdbcType=INTEGER}
        </where>
    </select>

