<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aojiaoo.modules.sys.mapper.RoleMapper">



    <sql id="Base_Column_List">
            a.id as id,a.role_name as roleName
    </sql>

    <sql id="Base_select_table">
        sys_role a
    </sql>


    <select id="selectByPrimaryKey" resultType="com.aojiaoo.modules.sys.entity.Role">
        select
        <include refid="Base_Column_List"/>
        from <include refid="Base_select_table"/>
        <where>
              and  a.id = #{id,jdbcType=INTEGER}
        </where>
    </select>

    <select id="selectBySelective" resultType="com.aojiaoo.modules.sys.entity.Role">
        select
        <include refid="Base_Column_List"/>
        from <include refid="Base_select_table"/>
        <where>
               <if test="id != null">
                   and a.id = #{id,jdbcType=INTEGER}
               </if>
               <if test="roleName != null and roleName != ''">
                   and a.role_name = #{roleName,jdbcType=VARCHAR}
               </if>
        </where>
    </select>



    <insert id="insert" parameterType="com.aojiaoo.modules.sys.entity.Role">
        insert into sys_role (
            id,role_name
        )
        values (
            #{id,jdbcType=INTEGER},
            #{roleName,jdbcType=VARCHAR}
        )
    </insert>


    <insert id="insertSelective" parameterType="com.aojiaoo.modules.sys.entity.Role">

        insert into sys_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
                    <if test="id != null">
                        id,
                    </if>
                    <if test="roleName != null">
                        role_name,
                    </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                   <if test="id != null">
                       #{id,jdbcType=INTEGER},
                   </if>
                   <if test="roleName != null">
                       #{roleName,jdbcType=VARCHAR},
                   </if>
        </trim>
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.aojiaoo.modules.sys.entity.Role">
        update sys_role
        <set>
                 <if test="roleName != null">
                     role_name = #{roleName,jdbcType=VARCHAR},
                 </if>
        </set>

        <where>
              and  id = #{id,jdbcType=INTEGER}
        </where>
    </update>

    <update id="updateByPrimaryKey" parameterType="com.aojiaoo.modules.sys.entity.Role">
        update sys_role
        <set>
                   role_name = #{roleName,jdbcType=VARCHAR},
        </set>

        <where>
              and  id = #{id,jdbcType=INTEGER}
        </where>
    </update>

    <delete id="deleteByPrimaryKey">
        delete from sys_role
        <where>
              and  id = #{id,jdbcType=INTEGER}
        </where>
    </delete>

</mapper>