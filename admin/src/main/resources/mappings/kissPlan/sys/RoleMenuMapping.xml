<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aojiaoo.modules.sys.mapper.RoleMenuMapper">



    <sql id="Base_Column_List">
            a.role_id as roleId,a.menu_id as menuId
    </sql>

    <sql id="Base_select_table">
        sys_role_menu a
    </sql>


    <select id="selectByPrimaryKey" resultType="com.aojiaoo.modules.sys.entity.RoleMenu">
        select
        <include refid="Base_Column_List"/>
        from <include refid="Base_select_table"/>
        <where>
              and  a.role_id = #{roleId,jdbcType=INTEGER}
              and  a.menu_id = #{menuId,jdbcType=INTEGER}
        </where>
    </select>

    <select id="selectBySelective" resultType="com.aojiaoo.modules.sys.entity.RoleMenu">
        select
        <include refid="Base_Column_List"/>
        from <include refid="Base_select_table"/>
        <where>
               <if test="roleId != null">
                   and a.role_id = #{roleId,jdbcType=INTEGER}
               </if>
               <if test="menuId != null">
                   and a.menu_id = #{menuId,jdbcType=INTEGER}
               </if>
        </where>
    </select>



    <insert id="insert" parameterType="com.aojiaoo.modules.sys.entity.RoleMenu">
        insert into sys_role_menu (
            role_id,menu_id
        )
        values (
            #{roleId,jdbcType=INTEGER},
            #{menuId,jdbcType=INTEGER}
        )
    </insert>


    <insert id="insertSelective" parameterType="com.aojiaoo.modules.sys.entity.RoleMenu">

        insert into sys_role_menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
                    <if test="roleId != null">
                        role_id,
                    </if>
                    <if test="menuId != null">
                        menu_id,
                    </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                   <if test="roleId != null">
                       #{roleId,jdbcType=INTEGER},
                   </if>
                   <if test="menuId != null">
                       #{menuId,jdbcType=INTEGER},
                   </if>
        </trim>
    </insert>



    <delete id="deleteByPrimaryKey">
        delete from sys_role_menu
        <where>
              and  role_id = #{roleId,jdbcType=INTEGER}
              and  menu_id = #{menuId,jdbcType=INTEGER}
        </where>
    </delete>

</mapper>